{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@appTypes/*": [
        "./src/appTypes/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@appComponent/*": [
        "./src/components/app/*"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@hoc": [
        "./src/hoc"
      ],
      "@recoil/*": [
        "./src/recoil/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
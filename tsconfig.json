{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@server": [
        "./server"
      ],
      "@trpc": [
        "./server/trpc"
      ],
      "@trpc/*": [
        "./server/trpc/*"
      ],
      "@database": [
        "./server/database"
      ],
      "@dbUtils/*": [
        "./server/database/utils/*"
      ],
      "@appTypes/*": [
        "./src/appTypes/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@prevComp/*": [
        "./src/components/prev-components/*"
      ],
      "@layouts": [
        "./src/layouts"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@pageComponent/*": [
        "./src/components/pages/*"
      ],
      "@componentBlocks": [
        "./src/components/blocks"
      ],
      "@appComponent/*": [
        "./src/components/app/*"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@enum": [
        "./src/constants/enum"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@hoc": [
        "src/hocs"
      ],
      "@formController": [
        "./src/hocs/withReactFormController"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@recoil/*": [
        "./src/recoil/*"
      ]
    }
  },
  "exclude": [
    ".next",
    "node_modules"
  ],
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src",
    "**/*.ts",
    "**/*.tsx"
  ]
}